<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JoystickView">
        <attr name="stickRatio" format="float" />
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundAlpha" format="integer" />
        <attr name="backgroundBorderColor" format="color" />
        <attr name="backgroundBorderWidth" format="float" />
        <attr name="foregroundColor" format="color" />
        <attr name="foregroundAlpha" format="integer" />
        <attr name="foregroundBorderColor" format="color" />
        <attr name="foregroundBorderWidth" format="float" />
        <attr name="behaviour" format="enum">
            <enum name="circular" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>
    </declare-styleable>
</resources>